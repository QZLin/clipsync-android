<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ControlsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_controls_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:text="Status : "
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="109dp" />


        <Button
            android:id="@+id/activity_controls_status_refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:text="Refresh"
            android:textColor="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="230dp" />


    </LinearLayout>


    <Button
        android:id="@+id/activity_controls_service_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Start"
        android:textColor="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/activity_controls_service_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Stop"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />


    <Button
        android:id="@+id/activity_controls_log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="LogOut"
        android:textColor="@android:color/holo_blue_dark"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />
</LinearLayout>